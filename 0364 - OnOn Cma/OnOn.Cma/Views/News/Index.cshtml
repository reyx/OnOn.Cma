@{
    Layout = "~/Views/Shared/_Page.cshtml";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/news.css")">
}

@section scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/custom/news.js")"></script>
}



@section appBar {
    <div class="span6 align-left">

        <button id="btn-news-image" class="win-command">
            <span class="win-commandimage win-commandring">&#xe118;</span>
            <span class="win-label">Selecionar Imagem</span>
        </button>

    </div>
}

<div class="metro-section">
    <img data-bind="attr: { src: newsViewModel.Image }" alt="Imagem" />
</div>
<div id="paragraphs" class="metro-section">
    <textarea rows="1" id="news-content" data-bind="value: newsViewModel.Content" placeholder="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris feugiat, odio in hendrerit eleifend, arcu elit vestibulum est, et fermentum erat ante sit amet odio. Praesent luctus, nulla vitae scelerisque interdum, risus massa eleifend tortor, at rutrum ante dui a nisl. Cras vel congue sem. Etiam euismod dolor in sapien dignissim in viverra risus sodales. In eu nisi orci, ac suscipit nisi. Nulla nisi nisl, tempor eget accumsan vel, mollis at felis. Nam sagittis varius urna."></textarea>
</div>